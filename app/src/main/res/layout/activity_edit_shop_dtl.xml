<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditShopInfoAct"
    android:background="#EFEDED">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backicone"
            android:layout_marginTop="5dp"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Informaton's"
            android:textSize="21dp"
            android:layout_weight="1"
            tools:ignore="HardcodedText,InefficientWeight,SpUsage"
            android:gravity="center"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/image_save"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/save_alt_240"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/l1"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shop Name"
                    android:textSize="13dp"
                    tools:ignore="HardcodedText,SpUsage"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/ed_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    tools:ignore="Autofill,HardcodedText,LabelFor,SpUsage"
                    android:inputType="textPersonName"
                    android:hint=""
                    android:background="@color/white"
                    android:padding="2dp"
                    android:textColorHint="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    tools:ignore="HardcodedText,SpUsage"
                    android:textSize="13dp"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/ed_shop_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:padding="2dp"
                    android:background="@color/white"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/black"
                    tools:ignore="Autofill,SpUsage" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Street"
                    android:textSize="13dp"
                    tools:ignore="HardcodedText,SpUsage"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/ed_shop_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    tools:ignore="Autofill,HardcodedText,SpUsage"
                    android:padding="2dp"
                    android:background="@color/white"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City"
                    tools:ignore="HardcodedText,SpUsage"
                    android:textSize="13dp"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/ed_shop_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    tools:ignore="Autofill,HardcodedText,SpUsage"
                    android:background="@color/white"
                    android:padding="2dp"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textSize="13dp"
                    tools:ignore="HardcodedText,SpUsage"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/ed_shop_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:textStyle="bold"
                    android:textSize="17dp"

                    android:padding="2dp"
                    android:background="@color/white"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/black"
                    tools:ignore="Autofill,SpUsage" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Postcode"
                    android:textSize="13dp"
                    tools:ignore="HardcodedText,SpUsage"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/ed_shop_postCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:padding="2dp"
                    android:background="@color/white"
                    android:inputType="number"
                    android:textColor="@color/black"
                    tools:ignore="Autofill,SpUsage" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile number"
                    android:textSize="13dp"
                    tools:ignore="HardcodedText,SpUsage"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/ed_shop_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:textStyle="bold"
                    android:textColorHint="@color/black"
                    android:textSize="17dp"
                    android:padding="2dp"
                    android:enabled="true"
                    android:background="@color/white"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    tools:ignore="Autofill,SpUsage" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="13dp"
                    tools:ignore="HardcodedText,SpUsage"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/ed_shop_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    tools:ignore="Autofill,HardcodedText,SpUsage"
                    android:padding="2dp"
                    android:background="@color/white"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>