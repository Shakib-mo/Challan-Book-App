<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F6F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/te_size"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="0"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/blu"
            android:background="@drawable/roun_text_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText,SpUsage" />

        <TextView
            android:id="@+id/te_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            tools:ignore="HardcodedText,SpUsage"
            android:layout_marginStart="30sp"
            app:layout_constraintStart_toEndOf="@id/te_size"
            app:layout_constraintTop_toTopOf="@id/te_size"/>

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs"
            tools:ignore="HardcodedText,SpUsage"
            android:textStyle="bold"
            android:layout_marginStart="30sp"
            app:layout_constraintStart_toEndOf="@id/te_size"
            app:layout_constraintTop_toBottomOf="@id/te_product"/>

        <TextView
            android:id="@+id/te_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            tools:ignore="HardcodedText,SpUsage"
            android:textStyle="bold"
            android:layout_marginStart="5sp"
            app:layout_constraintStart_toEndOf="@id/t2"
            app:layout_constraintTop_toBottomOf="@id/te_product"/>
        <TextView
            android:id="@+id/te_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".00"
            tools:ignore="HardcodedText,SpUsage"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/te_price"
            app:layout_constraintTop_toBottomOf="@id/te_product"/>

        <TextView
            android:id="@+id/te_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@id/te1"
            app:layout_constraintTop_toBottomOf="@id/te_product"/>
        <TextView
            android:id="@+id/te1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage"
            android:layout_marginEnd="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/te_product"/>

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10sp"
            app:layout_constraintStart_toEndOf="@id/te_size"
            app:layout_constraintTop_toBottomOf="@id/te_price"/>



        <TextView
            android:id="@+id/te_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            tools:ignore="HardcodedText,SpUsage"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5sp"
            app:layout_constraintStart_toEndOf="@id/t1"
            app:layout_constraintTop_toBottomOf="@id/te_price"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>